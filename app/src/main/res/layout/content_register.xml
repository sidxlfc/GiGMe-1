<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterActivity"
    android:background="@drawable/login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColorHint="#f7f7f7"
        android:ems="10"
        android:id="@+id/et_username"
        android:hint="Username"
        android:textColor="#f7f7f7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="#fcfafa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColorHint="#f7f7f7"
        android:ems="10"
        android:id="@+id/et_email"
        android:layout_below="@+id/et_username"
        android:hint="Email ID"
        android:textColor="#f7f7f7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#fcfafa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:textColorHint="#f7f7f7"
        android:id="@+id/et_pwd"
        android:autoText="false"
        android:layout_below="@+id/et_email"
        android:hint="Password"
        android:textColor="#f7f7f7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#fcfafa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_re_pwd"
        android:textColorHint="#f7f7f7"
        android:layout_below="@+id/et_pwd"
        android:hint="Re-enter password"
        android:textColor="#f7f7f7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#fcfafa" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:textColorHint="#f7f7f7"

        android:ems="10"
        android:id="@+id/et_DOB"
        android:layout_below="@+id/et_re_pwd"
        android:hint="Date of Birth"
        android:textColor="#f7f7f7"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#fcfafa" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_phoneNumber"
        android:textColorHint="#f7f7f7"
        android:textColor="#f7f7f7"
        android:layout_below="@+id/et_DOB"
        android:hint="Phone number"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#fcfafa" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/rb_male"
        android:textColorHint="#f7f7f7"
        android:checked="false"
        android:textColor="#f7f7f7"
        android:layout_below="@+id/et_phoneNumber"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp"
        android:backgroundTint="#fcfafa" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:textColor="#f7f7f7"
        android:textColorHint="#f7f7f7"
        android:id="@+id/rb_female"
        android:checked="false"
        android:layout_alignTop="@+id/rb_male"
        android:layout_toEndOf="@+id/rb_male"
        android:layout_marginStart="74dp"
        android:backgroundTint="#fcfafa" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btn_regPageRegister"
        android:background="@android:color/transparent"
        android:textSize="25dp"
        android:layout_below="@+id/rb_male"
        android:textColor="#f7f7f7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />


</RelativeLayout>
