<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.uta.gigme.ViewEventDetails"
    tools:showIn="@layout/activity_view_event_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:drawableLeft="@drawable/ic_name"
            android:id="@+id/tvEventName"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name "/>


            <TextView
                android:drawableLeft="@drawable/ic_price"
                android:id="@+id/tvEventCoverCharge"
                android:text="Ticket Price "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvEventName" />





        <TextView
            android:drawableLeft="@drawable/ic_food"
            android:id="@+id/tv_type_of_food"
            android:text="Food Served "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_genre"/>

        <TextView
            android:drawableLeft="@drawable/ic_city"
            android:id="@+id/tv_city"
            android:text="City "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_below="@+id/tvEventCoverCharge"/>

        <TextView
            android:drawableLeft="@drawable/ic_genre2"
            android:id="@+id/tv_genre"
            android:text="Genre "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_city"/>

        <TextView
            android:drawableLeft="@drawable/ic_bevrage"
            android:id="@+id/tv_beverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_type_of_food"/>

        <TextView
            android:drawableLeft="@drawable/ic_privateevent"
            android:id="@+id/tv_private"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_beverage"/>

        <TextView
            android:drawableLeft="@drawable/ic_rstricted"
            android:id="@+id/tv_minAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_private"
            android:layout_marginTop="15dp"/>

        <TextView
            android:drawableLeft="@drawable/ic_start"
            android:id="@+id/tv_from_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_minAge"
            android:layout_marginTop="15dp"/>

        <TextView
            android:drawableLeft="@drawable/ic_startsat"
            android:id="@+id/tv_from_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_from_date"
            android:layout_alignLeft="@+id/tv_from_date"
            android:layout_below="@+id/tv_from_date"/>

        <TextView
            android:drawableLeft="@drawable/ic_start"
            android:id="@+id/tv_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_from_time"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_from_time" />

        <TextView
            android:drawableLeft="@drawable/ic_endsat"
            android:id="@+id/tv_to_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_to_date"
            android:layout_below="@+id/tv_to_date"/>

        </RelativeLayout>

    </ScrollView>


    <Button
        android:drawableLeft="@drawable/ic_callhost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_contact"
        android:id="@+id/btContact"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:drawableRight="@drawable/ic_viewonmap"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_view_on_map"
        android:id="@+id/btMaps"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
